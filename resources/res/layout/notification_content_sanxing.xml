<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/notification_main" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/notification_logo" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginTop="12dp" android:src="@drawable/notification_logo" android:layout_marginStart="12dp"/>
    <TextView android:textSize="12sp" android:textColor="@color/black" android:id="@+id/notification_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/guide_app_name" android:drawablePadding="4dp" android:alpha="0.35" android:layout_marginStart="4dp" android:layout_toEndOf="@+id/notification_logo" android:textFontWeight="400"/>
    <RelativeLayout android:gravity="center" android:id="@+id/delete" android:visibility="gone" android:layout_width="1dp" android:layout_height="1dp" android:layout_alignParentEnd="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/notify_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/notification_logo">
        <ImageView android:id="@+id/hw_logo" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/hw_logo_notification"/>
        <TextView android:textSize="15sp" android:textColor="@color/notification_content" android:gravity="center_vertical" android:id="@+id/notification_content" android:layout_width="0dp" android:layout_height="wrap_content" android:maxWidth="290dp" android:lines="2" android:layout_weight="1" android:layout_marginEnd="10dp" android:textFontWeight="500"/>
        <ImageView android:id="@+id/notification_split" android:background="@color/black_4" android:layout_width="1dp" android:layout_height="20dp" android:layout_marginEnd="6dp"/>
        <RelativeLayout android:gravity="center" android:id="@+id/notification_touchpad" android:visibility="gone" android:layout_width="60dp" android:layout_height="match_parent">
            <ImageView android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/notification_touchpad"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/control_main" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="#cc000000" android:gravity="center" android:id="@+id/notification_cancel" android:background="@drawable/custom_notification_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_weight="1" android:paddingVertical="14dp" android:textFontWeight="500"/>
        <TextView android:textSize="14sp" android:textColor="#cc000000" android:gravity="center" android:id="@+id/notification_close" android:background="@drawable/custom_notification_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/word_close" android:layout_weight="1" android:paddingVertical="14dp" android:textFontWeight="500"/>
    </LinearLayout>
</RelativeLayout>
