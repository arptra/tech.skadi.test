        <ImageView android:layout_gravity="center" android:id="@+id/guide_close" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="0x7f08067f" android:paddingStart="10dp" android:paddingEnd="10dp"/>
    </LinearLayout>
</FrameLayout>
