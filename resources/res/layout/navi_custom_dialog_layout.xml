<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/custom_dlg" android:background="@drawable/bg_custom_dialog" android:paddingTop="24dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="20dp">
    <TextView android:textSize="@dimen/text_size_19" android:textColor="@color/theme_color_2" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size_dp_8" android:layout_marginBottom="@dimen/size_dp_8" android:layout_marginStart="@dimen/size_dp_20" android:layout_marginEnd="@dimen/size_dp_20"/>
    <TextView android:textSize="@dimen/text_size_15" android:textColor="@color/theme_white_alpha_color" android:gravity="center" android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size_dp_16" android:lineSpacingMultiplier="1.3" android:layout_marginStart="@dimen/size_dp_24" android:layout_marginEnd="@dimen/size_dp_24"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/check_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size_dp_16" android:layout_marginStart="@dimen/size_dp_24" android:layout_marginEnd="@dimen/size_dp_24">
        <ImageView android:id="@+id/check_btn" android:layout_width="@dimen/size_dp_16" android:layout_height="@dimen/size_dp_16" android:src="@drawable/check_off" android:scaleType="fitXY"/>
        <TextView android:textSize="@dimen/text_size_15" android:textColor="@color/theme_white_alpha_color" android:gravity="center_vertical" android:id="@+id/check_btn_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/background_local_tips" android:layout_marginStart="@dimen/size_dp_8"/>
    </LinearLayout>
    <View android:background="#55888888" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="20dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/size_dp_48" android:layout_margin="@dimen/size_dp_24" android:layout_marginEnd="16dp">
        <TextView android:textSize="@dimen/text_size_17" android:textColor="@color/theme_color_2" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/dialog_btn_2_bg" android:layout_width="0dp" android:layout_height="match_parent" android:text="@android:string/cancel" android:layout_weight="1"/>
        <View android:id="@+id/empty" android:background="@android:color/transparent" android:layout_width="@dimen/size_dp_12" android:layout_height="wrap_content"/>
        <TextView android:textSize="@dimen/text_size_17" android:textColor="@color/theme_color_1" android:gravity="center" android:id="@+id/confirm" android:background="@drawable/address_btn" android:layout_width="0dp" android:layout_height="match_parent" android:text="@android:string/ok" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
