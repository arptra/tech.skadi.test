<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/custom_dlg" android:background="@drawable/bg_custom_dialog" android:paddingTop="24dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/text_size_19" android:textColor="@color/theme_color_2" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size_dp_8" android:layout_marginBottom="@dimen/size_dp_8" android:text="@string/open_gps_title" android:layout_marginStart="@dimen/size_dp_20" android:layout_marginEnd="@dimen/size_dp_20"/>
    <TextView android:textSize="@dimen/text_size_15" android:textColor="@color/theme_white_alpha_color" android:gravity="center" android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size_dp_16" android:text="@string/open_gps_title_desp" android:layout_marginStart="@dimen/size_dp_24" android:layout_marginEnd="@dimen/size_dp_24"/>
    <View android:background="#55888888" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="20dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/bg_permission_dialog_pannel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/size_dp_24">
        <RelativeLayout android:id="@+id/top_info" android:background="@drawable/bg_permission_item_pannel" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="0">
            <ImageView android:layout_width="wrap_content" android:layout_height="@dimen/size_dp_44" android:src="@drawable/light_left_arrow" android:scaleType="center" android:layout_centerVertical="true" android:layout_marginStart="@dimen/size_dp_16"/>
            <TextView android:textSize="@dimen/text_size_13" android:textColor="@color/theme_color_2" android:gravity="center" android:layout_width="wrap_content" android:layout_height="@dimen/size_dp_44" android:text="@string/gps_title" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="0.5dp" app:layout_constraintTop_toBottomOf="@+id/top_info"/>
        <RelativeLayout android:id="@+id/middle_info" android:background="@color/dialog_bg_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size_dp_16" app:layout_constraintTop_toBottomOf="@+id/top_info">
            <TextView android:textSize="@dimen/text_size_13" android:textColor="@color/theme_color_2" android:gravity="center" android:id="@+id/title_desp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size_dp_16" android:text="@string/gps_title" android:layout_marginStart="@dimen/size_dp_16" android:layout_alignParentStart="true"/>
            <TextView android:textSize="@dimen/text_size_11" android:textColor="@color/theme_white_alpha_color" android:gravity="center" android:id="@+id/title_sub" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size_dp_4" android:text="@string/gps_title_sub" android:layout_below="@+id/title_desp" android:layout_marginStart="@dimen/size_dp_16"/>
            <View android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="16dp" android:layout_below="@+id/title_sub"/>
            <Switch android:enabled="false" android:id="@+id/avoid_limite_switch" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:thumb="@drawable/thumb_bg" android:layout_centerVertical="true" android:track="@drawable/track_bg" android:layout_marginEnd="@dimen/size_dp_20" android:layout_alignParentEnd="true" android:showText="false"/>
        </RelativeLayout>
        <View android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="@dimen/size_dp_50" app:layout_constraintTop_toBottomOf="@+id/middle_info"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/size_dp_48" android:layout_marginBottom="@dimen/size_dp_16" android:layout_marginStart="@dimen/size_dp_24" android:layout_marginEnd="@dimen/size_dp_24">
        <TextView android:textSize="@dimen/text_size_17" android:textColor="@color/theme_color_2" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/dialog_btn_2_bg" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/dont_open_gps" android:layout_weight="1"/>
        <View android:id="@+id/empty" android:background="@android:color/transparent" android:layout_width="@dimen/size_dp_12" android:layout_height="wrap_content"/>
        <TextView android:textSize="@dimen/text_size_17" android:textColor="@color/theme_color_1" android:gravity="center" android:id="@+id/confirm" android:background="@drawable/address_btn" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/click_to_set" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
