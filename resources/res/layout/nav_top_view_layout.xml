    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="0" app:layout_constraintStart_toStartOf="0">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/navi_drive_layout" android:background="@drawable/btn_select" android:layout_width="wrap_content" android:layout_height="@dimen/size_dp_24" android:layout_marginTop="@dimen/size_dp_8" android:layout_marginBottom="@dimen/size_dp_8" android:layout_weight="1" android:layout_marginStart="10dp">
            <LinearLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="10dp" android:layout_marginEnd="5dp">
                <ImageView android:id="@+id/navi_drive_icon" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/car_icon"/>
                <TextView android:textSize="@dimen/text_size_14" android:textColor="@color/theme_color_1" android:gravity="center" android:id="@+id/navi_drive" android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/drive_title" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
                <ImageView android:id="@+id/navi_top_down_arrow" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/down_arrow_white"/>
            </LinearLayout>
        </LinearLayout>
        <com.upuphone.ar.navi.lite.view.CButton android:textSize="@dimen/text_size_14" android:textColor="@color/btn_color_gray" android:gravity="center_vertical" android:id="@+id/navi_walk" android:background="@drawable/btn_unselect" android:layout_width="wrap_content" android:layout_height="@dimen/size_dp_24" android:layout_marginTop="@dimen/size_dp_8" android:layout_marginBottom="@dimen/size_dp_8" android:text="@string/walk_title" android:drawablePadding="@dimen/size_dp_4" android:layout_weight="1" android:drawableStart="@drawable/walk_icon"/>
        <com.upuphone.ar.navi.lite.view.CButton android:textSize="@dimen/text_size_14" android:gravity="center_vertical" android:id="@+id/navi_bike" android:background="@drawable/btn_unselect" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="@dimen/size_dp_24" android:layout_marginTop="@dimen/size_dp_8" android:layout_marginBottom="@dimen/size_dp_8" android:text="@string/ride_title" android:drawablePadding="@dimen/size_dp_4" android:layout_weight="1" android:drawableStart="@drawable/bike_icon" android:layout_marginEnd="10dp"/>
