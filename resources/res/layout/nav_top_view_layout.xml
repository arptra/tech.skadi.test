        <View android:id="@+id/v_line" android:background="@color/address_edit_line_color" android:layout_width="1dp" android:layout_height="50dp" android:layout_marginTop="25dp" android:layout_marginBottom="25dp" android:layout_above="@+id/to_img" android:layout_below="@+id/from_img" android:layout_alignTop="@+id/from_img" android:layout_alignBottom="@+id/to_img" android:layout_marginStart="15dp"/>
