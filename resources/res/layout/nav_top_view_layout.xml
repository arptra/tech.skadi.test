        <ImageView android:id="@+id/from_to_change" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/navi_switch_icon" android:layout_centerVertical="true" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true"/>
