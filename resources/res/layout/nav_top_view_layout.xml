<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="120dp">
    <ImageView android:id="@+id/back_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size_dp_8" android:src="@drawable/ic_arrow_back" android:layout_centerVertical="true" android:paddingHorizontal="@dimen/size_dp_6" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
