        <View android:id="@+id/line" android:background="@color/address_edit_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/start_postion" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/path_step" android:layout_alignStart="@+id/start_postion"/>
        <AutoCompleteTextView android:textSize="@dimen/text_size_sub" android:textColor="@color/theme_color_2" android:textColorHighlight="@color/address_highlight_color" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/end_postion" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="36dp" android:text="天府广场" android:maxLines="1" android:maxEms="5" android:layout_below="@+id/line" android:inputType="textAutoComplete" android:imeOptions="actionDone" android:layout_marginStart="30dp" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/path_step"/>
