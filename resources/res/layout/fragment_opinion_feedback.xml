            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/contact_information" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/contact_information" android:paddingStart="20dp" android:paddingHorizontal="20dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/screenshot_recyclerview"/>
            <EditText android:textSize="16sp" android:textColor="@color/white" android:textColorHint="@color/grey" android:gravity="center_vertical" android:id="@+id/contact_information_content" android:background="@drawable/bg_card_item" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginTop="10dp" android:hint="@string/contact_information_note" android:inputType="text" android:paddingStart="19dp" app:layout_constraintTop_toBottomOf="@+id/contact_information"/>
