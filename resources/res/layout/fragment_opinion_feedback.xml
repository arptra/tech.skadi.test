            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/problem_screenshot_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0/9" android:paddingHorizontal="20dp" app:layout_constraintBottom_toBottomOf="@+id/problem_screenshot" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/problem_screenshot"/>
