            <TextView android:textSize="16sp" android:textColor="@color/white" android:textColorHint="@color/grey" android:id="@+id/problem_occur_time_content" android:background="@drawable/bg_card_item" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/problem_occur_time"/>
