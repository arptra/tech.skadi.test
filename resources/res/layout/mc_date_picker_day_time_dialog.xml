<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:splitMotionEvents="false">
    <FrameLayout android:layout_width="match_parent" android:layout_height="23dp" android:layout_marginTop="21dp" android:layout_marginStart="32dp" android:layout_marginEnd="32dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="19sp" android:textColor="@color/mc_custom_date_picker_unselected_tab_color" android:id="@+id/time_preview" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/mc_custom_date_time_gregorian" android:singleLine="true" android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
            <TextView android:textSize="14sp" android:textColor="@color/mc_custom_date_picker_selected_tab_color" android:gravity="center" android:id="@+id/switchshowlunar" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/mc_custom_date_time_show_lunar" android:singleLine="true" android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </FrameLayout>
    <com.meizu.common.widget.DayTimeDatePicker android:layout_gravity="center_horizontal" android:id="@+id/day_time_picker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="34dp"/>
</LinearLayout>
