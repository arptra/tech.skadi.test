<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/card_root" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/card_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/card_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@color/grey" android:layout_centerVertical="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="90dp" android:layout_toEndOf="@+id/card_icon" android:layout_marginVertical="16dp">
            <TextView android:textSize="17sp" android:textColor="@color/title_text_color" android:id="@+id/card_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="13dp" android:lineHeight="24sp" android:textFontWeight="@integer/medium"/>
            <TextView android:textSize="14sp" android:textColor="@color/subtitle_text_color" android:id="@+id/card_sub_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:lineSpacingExtra="0dp" android:lineSpacingMultiplier="1" android:layout_marginStart="13dp" android:lineHeight="20sp" android:textFontWeight="@integer/regular"/>
        </LinearLayout>
        <ImageView android:id="@+id/card_right_notify_icon" android:visibility="gone" android:layout_width="6dp" android:layout_height="6dp" android:src="@drawable/icon_badge" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/card_right_icon"/>
        <TextView android:textSize="14sp" android:textColor="@color/mainbody_text_color" android:ellipsize="end" android:gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/tv_right_content" android:visibility="gone" android:layout_width="160dp" android:layout_height="wrap_content" android:maxLines="2" android:layout_centerVertical="true" android:layout_toStartOf="@+id/card_right_icon"/>
        <TextView android:textSize="10sp" android:textColor="@color/white" android:id="@+id/tv_red_tips" android:background="@drawable/shape_glass_update_red" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update_available" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/card_right_icon" android:paddingHorizontal="5dp"/>
        <ImageView android:id="@+id/card_right_icon" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@color/grey" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
        <com.meizu.common.widget.Switch android:id="@+id/item_switch" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:thumb="@drawable/sp_thumb_bg" android:layout_centerVertical="true" android:track="@drawable/sp_track_bg" android:layout_alignParentEnd="true" android:showText="false"/>
        <com.meizu.common.widget.MzButton android:textSize="12sp" android:textColor="@color/color_FFFFFF" android:gravity="center" android:id="@+id/start_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="88dp" android:text="@string/goto_start_permission" android:layout_centerVertical="true" android:layout_alignParentEnd="true" android:stateListAnimator="@null" style="@style/Theme.Upuphone.Font.Button"/>
    </RelativeLayout>
    <ImageView android:id="@+id/status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/running_status" android:layout_alignParentTop="true" android:layout_alignParentBottom="true" android:foregroundGravity="center_vertical" android:layout_marginEnd="12dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
