                        <com.upuphone.ar.navi.lite.view.SearchMenuView android:id="@+id/searchmenu" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true"/>
                        <com.upuphone.ar.navi.lite.view.SlideRecyclerView android:scrollbarSize="5dp" android:scrollbarThumbVertical="@drawable/scrollbar_bg" android:id="@+id/search_list" android:visibility="gone" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/searchmenu" android:paddingStart="10dp" android:paddingEnd="10dp"/>
                    </LinearLayout>
                </LinearLayout>
                <com.upuphone.ar.navi.lite.view.EmptyDataView android:id="@+id/search_empty_data" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>
