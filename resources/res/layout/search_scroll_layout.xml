<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/search_scroll" android:background="@color/theme_black_3_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/marginTopView" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <include layout="@layout/search_title_panel_layout"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:id="@+id/search_top_panel_layout" android:background="@drawable/search_title_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include layout="@layout/search_home_panel_layout"/>
        </LinearLayout>
        <include android:id="@+id/search_want_view" android:visibility="gone" layout="@layout/search_want_address_view"/>
        <androidx.core.widget.NestedScrollView android:id="@+id/search_list_layout" android:background="@drawable/search_title_bg" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.upuphone.ar.navi.lite.view.SearchCommonView android:id="@+id/search_common_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
