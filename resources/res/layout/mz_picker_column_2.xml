<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" style="@style/Widget.DeviceDefault.Light.MzPickerLayout">
    <ImageView android:layout_gravity="center" android:id="@+id/mz_select_box" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="0x7f0807fc" android:scaleType="fitXY"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/mz_column_parent" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/mz_picker_padding_left" android:paddingEnd="@dimen/mz_picker_padding_right">
        <FrameLayout android:id="@+id/mz_column1Layout" android:layout_width="@dimen/mz_picker_column_width" android:layout_height="@dimen/mz_picker_height" android:layout_weight="1">
            <com.meizu.widget.ScrollTextView android:id="@+id/mz_scroll1" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <TextView android:textSize="@dimen/mz_picker_text_size" android:textColor="@color/mz_picker_text_color" android:gravity="center" android:layout_gravity="end" android:id="@+id/mz_scroll1_text" android:layout_width="@dimen/mz_picker_text_width" android:layout_height="match_parent" android:layout_marginEnd="@dimen/mz_picker_column_2_text_margin_right"/>
        </FrameLayout>
        <ImageView android:id="@+id/mz_divider_bar1" android:visibility="gone" android:layout_width="0px" android:layout_height="match_parent"/>
        <FrameLayout android:id="@+id/mz_column2Layout" android:layout_width="@dimen/mz_picker_column_width" android:layout_height="@dimen/mz_picker_height" android:layout_weight="1">
            <com.meizu.widget.ScrollTextView android:id="@+id/mz_scroll2" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <TextView android:textSize="@dimen/mz_picker_text_size" android:textColor="@color/mz_picker_text_color" android:gravity="center" android:layout_gravity="end" android:id="@+id/mz_scroll2_text" android:layout_width="@dimen/mz_picker_text_width" android:layout_height="match_parent" android:layout_marginEnd="@dimen/mz_picker_column_2_text_margin_right"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
