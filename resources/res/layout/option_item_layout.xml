    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="?attr/colorOnSurfaceVariant" android:gravity="end" android:id="@+id/summary" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textDirection="locale" android:textAlignment="viewEnd" android:layout_marginEnd="8dp"/>
