<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetLeft="0dp" android:insetRight="0dp">
            <shape android:shape="rectangle">
                <solid android:color="?attr/colorStatePressed"/>
                <corners android:radius="6dp"/>
            </shape>
        </inset>
    </item>
    <item android:state_checked="true">
        <inset android:insetLeft="0dp" android:insetRight="0dp">
            <shape android:shape="rectangle">
                <solid android:color="?attr/colorOnSelected"/>
                <corners android:radius="6dp"/>
            </shape>
        </inset>
    </item>
    <item>
        <inset android:insetLeft="0dp" android:insetRight="0dp">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent"/>
                <corners android:radius="6dp"/>
            </shape>
        </inset>
    </item>
</selector>
